.Auth {
  height: 100%;
}

.Auth__content {
  flexCenter();
  background-color: $bg;
  width: 100vw;
  padding: 15px;
  min-height: 92vh;
  flex-direction: column;
}

.Auth__form-wrapper {
  border-radius: 4px;
  background-color: $white;
  width: 450px;
}

.Auth__title {
  border-bottom: 1px solid $bg;
  color: $textfieldColor;
  font-size: 28px;
  line-height: 1;
  padding: 10px 10px 12px;
  margin-bottom: 0;
}

.Auth__form {
  .group {
    padding: 15px;
    margin-bottom: 0;
    border-bottom: 1px solid $bg;
  }
}

.UserSettings {
  .Auth__content {
    padding-top: 12vh;
    justify-content: flex-start;
  }

  .Auth__form-wrapper {
    margin-bottom: 15px;
  }
}

@media (max-width: 749px) {
  .Auth__content {
    width: 100%;
    padding: 10px;
    min-height: 100%;
    justify-content: flex-start;

    .react-tabs {
      width: 100%;

      > ul {
        text-align: center;
      }
    }
  }

  .Auth__form-wrapper {
    width: 100%;
  }

  .Auth__title {
    font-size: 22px;
    padding: 10px;
  }

  .Auth__form {
    .group {
      padding: 10px;
    }
  }

  .UserSettings {
    .Auth__content {
      padding-top: 10px;
    }

    .Auth__form-wrapper {
      margin-bottom: 10px;
    }
  }
}
