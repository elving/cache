.color-picker {
  display: flex;
  align-items: center;
}

.color-picker__color {
  cursor: pointer;

  &, > span {
    flexCenter();
    cursor: pointer;
    border: 0 none;
    background-color: transparent;
    flex: 1;
    width: 100%;
    height: 42px;
    margin: 0;
    padding: 0;
  }

  &:first-child {
    border-radius: 4px 0 0 4px;
  }

  &:last-child {
    border-radius: 0 4px 4px 0;
  }

  &[data-color="red"] {
    background-color: $itemRed;
  }

  &[data-color="blue"] {
    background-color: $itemBlue;
  }

  &[data-color="green"] {
    background-color: $itemGreen;
  }

  &[data-color="purple"] {
    background-color: $itemPurple;
  }

  &[data-color="orange"] {
    background-color: $itemOrange;
  }

  &[data-color="yellow"] {
    background-color: $itemYellow;
  }

  &:hover,
  &.color-picker__color--selected {
    .color-picker__color__icon {
      display: block;
    }
  }

  .color-picker__color__icon {
    top: 1px;
    margin: 0 auto;
    display: none;
    position: relative;
  }
}
