.Notification {
  top: 0;
  right: 0;
  display: none;
  padding: 10px;
  z-index: 10000;
  position: fixed;
  align-items: center;
  justify-content: space-between;

  &.Notification--active {
    display: flex;
  }

  &.Notification--error {
    background-color: $darkRed;
  }

  &.Notification--success {
    background-color: $itemGreen;
  }

  &.Notification--topLeft {
    top: 1px;
    left: 1px;
    right: auto;
    bottom: auto;
  }

  &.Notification--topCenter {
    top: 1px;
    left: 50%;
    right: auto;
    bottom: auto;
    margin-left: -375px;
  }

  &.Notification--topRight {
    top: 1px;
    left: auto;
    right: 1px;
    bottom: auto;
  }

  &.Notification--bottomLeft {
    top: auto;
    left: 1px;
    right: auto;
    bottom: 1px;
  }

  &.Notification--createdItem {
    top: auto;
    left: 50%;
    right: auto;
    bottom: 4%;
    margin-left: -143.203px;
  }

  &.Notification--bottomRight {
    top: auto;
    left: auto;
    right: 1px;
    bottom: 1px;
  }
}

.Notification__message {
  color: $white;
  font-size: 13px;
  margin: 0 10px;
}

.Notification__icon path,
.Notification__close path {
  fill: $white;
}

.Notification__close {
  height: auto;
  padding: 0;
  min-height: 100%;
}
