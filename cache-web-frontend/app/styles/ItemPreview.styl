.ItemPreview {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.ItemPreview__title,
.LinkItemPreview__url,
.TextItemPreview__text {
  font-size: 16px;
  text-align: center;
  word-break: break-word;
  margin: 0 auto;
}

.TextItemPreview__text {
  margin: 0 auto 15px;
}

.LinkItemPreview__cover {
  border: 1px solid $bg;
  border-radius: 3px;
  margin: 0 auto 10px;
  padding: 5px;
}

.TextItemPreview__text {
  quotes: "“" "”" "‘" "’";

  &:before {
    content: open-quote;
  }

  &:after {
    content: close-quote;
  }

  &:after,
  &:before {
    font-size: 30px;
    line-height: 1;
    top: 5px;
    position: relative;
    vertical-align: middle;
  }
}

.AudioItemPreview__audio,
.VideoItemPreview__video {
  margin: 0 auto 15px;

  &::-webkit-media-controls-panel {
    border-radius: 0;
  }
}

.ImageItemPreview__image-container {
  width: 100%;
  height: 250px;
  margin: 0 auto 15px;
  display: flex;
  overflow: hidden;
  position: relative;
  align-items: center;
  justify-content: center;

  &.ImageItemPreview__image-container--error {
    flex-direction: column;
  }

  &.ImageItemPreview__image-container--loading {
    background-size: 45px 45px;
    background-image: url(/assets/images/loading.svg);
    background-repeat: no-repeat;
    background-position: center center;

    > .ImageItemPreview__image {
      display: none;
    }
  }
}

.ImageItemPreview__image {
  background-color: $lightGrey;
  width: auto;
  display: block;
  max-width: 100%;
  max-height: 250px;
}
