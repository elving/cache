.TagsInput__input {
  display: block;
}

.TagsInput__tag {
  cursor: default;
  border-radius: 4px;
  background-color: #bfcadc;
  color: $white;
  font-size: 10px;
  display: inline-block;
  padding: 1px 5px 5px;
  margin-top: 5px;
  margin-right: 5px;

  &:before {
    content: "#";
    display: inline-block;
    margin-right: 2px;
  }
}

.TagsInput__remove {
  border: 0 none;
  background-color: transparent;
  top: 4px;
  padding: 0;
  position: relative;
  margin-left: 2px;
}
