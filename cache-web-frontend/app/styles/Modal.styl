.ModalOverlay {
  background-color: rgba($darkestGrey, 0.35);
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: none;
  z-index: 100000;
  position: fixed;
  align-items: center;
  justify-content: center;

  &.ModalOverlay--visible {
    display: flex;
  }
}

.Modal {
  background-color: $white;

  .StoreLinkInput {
    width: 100%;
  }

  .StoreLinkInput__input {
    width: calc(85% - 10px);
  }

  .StoreLinkInput__button {
    width: 15%;
  }
}

.Modal__content {
  flexCenter();
  padding: 10px;

  &.Modal__content--stacked {
    flex-direction: column;
  }
}

.Modal__text,
.Modal__title {
  text-align: center;
  margin: 0;
  padding: 10px;
}

.Modal__actions {
  border-top: 1px solid $bg;
  background-color: $white;
  display: flex;
  padding: 10px;
  align-items: center;
  justify-content: space-between;

  .button {
    width: calc(50% - 5px);

    &.button--full-width {
      width: 100%;
    }
  }
}


@media (max-width: 749px) {
  .Modal__title {
    font-size: 18px;
  }

  .Modal__text {
    font-size: 14px;
  }

  .Modal__actions {
    .button {
      font-size: 14px;
    }
  }
}