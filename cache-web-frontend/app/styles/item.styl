.content--sidebar-collapsed {
  .item {
    width: calc(100% / 5 - 10px);
  }
}

.item {
  border-bottom: 2px solid transparent;
  background-color: $white;
  width: calc(100% / 4 - 10px);
  margin: 0 10px 10px 0;
  position: relative;

  &[data-color="red"] {
    border-bottom-color: $itemRed;
  }

  &[data-color="blue"] {
    border-bottom-color: $itemBlue;
  }

  &[data-color="green"] {
    border-bottom-color: $itemGreen;
  }

  &[data-color="purple"] {
    border-bottom-color: $itemPurple;
  }

  &[data-color="orange"] {
    border-bottom-color: $itemOrange;
  }

  &[data-color="yellow"] {
    border-bottom-color: $itemYellow;
  }

  &.item--has-cover {
    .item__content {
      align-items: stretch;
      justify-content: flex-start;
    }

    .item__domain {
      flex: 1;
      width: 100%;
      height: 15%;
      padding: 0 10px;
      max-width: 250px;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;

      .icon {
        flex: 1 0 auto;
        max-width: 16px;
      }

      .icon + span {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        margin-left: 5px;
      }
    }
  }
}

.item__content {
  background-color: $white;
  height: 280px;
  display: flex;
  position: relative;
  align-items: stretch;
  flex-direction: column;
  justify-content: center;
}

.item__icon {
  flexCenter();
  margin-bottom: 10px;
}

.item__domain {
  flexCenter();
  font-size: 14px;
  text-align: center;
  padding: 0 10px;
}

.item__image {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  flex: 1;

  &.item__image--loading {
    background-size: 45px 45px;
    background-image: url(/assets/images/loading.svg);
  }
}

.item__link-cover {
  width: 100%;
  height: 85% !important;
  min-width: 200px;
  margin-bottom: 0;
}

.item__text {
  color: $darkBlack;
  font-size: 18px;
  text-align: center;
  word-break: break-word;
  padding: 10px;
  margin-bottom: 0;
}

.item__actions {
  border-top: 1px solid $bg;
  border-bottom: 1px solid $bg;
  background-color: $white;
  width: 100%;
  display: flex;
  z-index: 1;
  align-items: center;
  justify-content: space-around;

  .item__action {
    flexCenter();
    border: 0 none;
    background-color: transparent;
    padding: 10px;
  }

  .dropdown--item {
    z-index: 10;
  }
}

.item__info {
  background-color: $white;
  width: 100%;
  display: flex;
  padding: 10px;
  align-items: flex-start;
}

.item__source {
  cursor: pointer;
  display: flex;
  align-items: flex-start;
  text-decoration: none;

  &:hover {
    text-decoration: underline;
  }
}

.item__favicon {
  margin-right: 5px;
}

.item__title {
  font-size: 11px;
  word-break: break-word;
  flex: 1;
}

@media (max-width: 1135px) {
  .item {
    width: calc(100% / 3 - 10px);
  }
}

@media (max-width: 749px) {
  .item {
    width: calc(100% / 2 - 10px);
    margin: 0 10px 10px 0;
    position: relative;

    &.item--has-cover {
      .item__domain {
        max-width: 100%;
      }
    }
  }
}

@media (max-width: 499px) {
  .item {
    width: calc(100% - 10px);

    &.item--has-cover {
      .item__domain {
        max-width: 100%;
      }
    }
  }
}
