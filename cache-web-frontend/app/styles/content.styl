.content {
  background-color: $items;
  width: 80vw;
  height: 92vh;
  display: flex;
  overflow: auto;
  flex-direction: column;
  justify-content: space-between;

  &.content--fetching {
    background-size: 80px 80px;
    background-image: url(/assets/images/loading-page.svg);
    background-repeat: no-repeat;
    background-position: center center;

    .items,
    .collection-header {
      display: none;
    }
  }

  &.content--filters-expanded,
  &.content--sidebar-collapsed,
  &.content--no-collections {
    width: 100vw;
  }
}

.content-placeholder {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content__title {
  border-top: 1px solid $bg;
  border-bottom: 1px solid $bg;
  background-color: $itemsHeader;
  height: 45px;
  display: flex;
  padding: 0 10px;
  align-items: center;
  justify-content: space-between;

  &.content__title--has-no-collections {
    width: 100vw !important;
  }
}

.content__title__text {
  color: $darkBlack;
  font-size: 18px;
  line-height: 1;
  display: flex;
  align-items: center;
  margin-bottom: 0;

  .icon {
    margin-right: 5px;
  }
}

.content__title__actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

@media (max-width: 749px) {
  .content {
    width: 100%;
    height: 100%;
  }

  .content__title__text {
    font-size: 13px;

    > span {
      white-space: nowrap;
      margin-top: 2px;
    }

    .icon {
      width: 18px;
      height: 18px;
      flex-shrink: 0;
      margin-right: 5px;
    }
  }
}
