*, *:before, *:after {
  box-sizing: inherit;
  outline: none;

  // Disable tap highlighting on mobile webkit
  // http://rickyrosario.com/blog/how-disable-tap-highlighting-on-your-iphone-ipad-iwhatever-web-app/
  -webkit-touch-callout: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-tap-highlight-color: transparent; /* For some Androids */
}

html,
body,
#application,
#application > div {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  -webkit-tap-highlight-color: transparent;
}

body {
  color: $black;
  font-size: 16px;
  font-family: $font;
  font-weight: 400;
  line-height: 1.4;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  min-height: 100%;
}

h1, h2, h3, h4 {
  color: $darkBlack;
  font-weight: 300;
  line-height: 1.2;
  font-family: $font;
  margin-top: 0;
  margin-bottom: 15px;
}

h1 {
  font-size: 50px;
}

h2 {
  font-size: 42px;
}

h3 {
  font-size: 34px;
}

h4 {
  font-size: 26px;
}

p {
  margin-top: 0;
  margin-bottom: 15px;
}

strong {
  color: $darkBlack;
  font-weight: 700;
}

ol, ul {
  margin: 10px 0;
  padding: 0;
}

ul {
  list-style-type: circle;
}

ol li, ul li {
  margin-bottom: 10px;
}

ol li:last-child, ul li:last-child {
  margin-bottom: 0;
}

ol li > ol, ol li > ul,
ul li > ol, ul li > ul {
  padding-left: 30px;
  padding-right: 30px;
  margin-bottom: 15px;
}

hr {
  border: 0 none;
  border-top: 1px solid $grey;
  margin: 15px auto;
  display: block;
}

a {
  color: $blue;
  cursor: pointer;
  font-weight: 500;
  text-decoration: none;

  &:hover {
    color: $darkBlue;
    text-decoration: underline;
  }
}

q {
  quotes: "“" "”" "‘" "’";

  &:before {
    content: open-quote;
  }

  &:after {
    content: close-quote;
  }
}

.clearfix {
  *zoom: 1;

  &:before,
  &:after {
    content: " ";
    display: table;
  }

  &:after {
    clear: both;
  }
}

.iframeContainer {
  width: 100%;

  > iframe {
    width: 100% !important;
    margin: 15px auto !important;
  }
}

@media (max-width: 749px) {
  body {
    font-size: 14px;
  }
}
